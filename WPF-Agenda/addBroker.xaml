<Page x:Class="WPF_Agenda.addBroker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Agenda"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ajoutez un courtier">

    <StackPanel Background="#e9ecef">
        <Label FontSize="20">Ajoutez un courtier :</Label>
        <Label >Nom</Label>
        <TextBox Name="lastnameInput"></TextBox>
        <Label>Prénom</Label>
        <TextBox Name="firstnameInput"></TextBox>
        <Label>E-mail</Label>
        <TextBox Name="mailInput"></TextBox>
        <Label>Numéro de téléphone</Label>
        <TextBox Name="phoneInput"></TextBox>
        <Button Click="addBrokerToDb" Margin="10" HorizontalAlignment="Center">Enregistrer</Button>
        <Button HorizontalAlignment="Center">Annuler</Button>
        <Label Name="erreurLabel" ></Label>
    </StackPanel>
</Page>
