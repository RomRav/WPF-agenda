<Page x:Class="WPF_Agenda.addCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Agenda"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ajoutez un client">

    <StackPanel Background="#e9ecef">
        <Label FontSize="20">Ajoutez un client : </Label>
        <Label>Nom</Label>
        <TextBox></TextBox>
        <Label>Prénom</Label>
        <TextBox></TextBox>
        <Label>E-mail</Label>
        <TextBox></TextBox>
        <Label>Numéro de téléphone</Label>
        <TextBox></TextBox>
        <Label>Budget</Label>
        <TextBox></TextBox>
        <Button Margin="10" HorizontalAlignment="Center">Enregistrer</Button>
        <Button HorizontalAlignment="Center">Annuler</Button>
    </StackPanel>
</Page>
